<Window x:Class="PhotoOrg.DisplayWindow"
        x:Name="DispWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PhotoOrg"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800">
    <Grid>
        <Image x:Name ="DispImage" Height="{Binding ElementName=DispWindow, Path=ActualHeight}" Width="{Binding ElementName=DispWindow, Path=ActualWidth}" HorizontalAlignment="Left"/>

    </Grid>
</Window>
